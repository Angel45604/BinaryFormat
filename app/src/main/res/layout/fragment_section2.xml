<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.marcos.angel.binaryformat.fragment.feistel.Section2Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/binaryNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Binario"
                        android:maxLength="16"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/btnCifrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cifrar"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 1"
                            android:maxLength="2"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 2"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 3"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 4"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 5"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 6"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 7"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 8"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 9"
                                android:maxLength="2"
                                android:inputType="number"

                                />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 10"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 11"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/o12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 12"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 13"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/k14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Key 14"
                            android:maxLength="2"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 15"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatSpinner
                                android:id="@+id/o16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/k16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Key 16"
                                android:maxLength="2"
                                android:inputType="number"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/cResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="24dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>

